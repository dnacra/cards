    <color name="colorPrimary">#6200ee</color>
    <color name="colorPrimaryVariant">#3700b3</color>
    <color name="colorOnPrimary">#ffffff</color>

    <color name="colorSecondary">#03dac6</color>
    <color name="colorSecondaryVariant">#018786</color>
    <color name="colorOnSecondary">#000000</color>

    <color name="backgroundLight">#efefef</color>
    <color name="backgroundLightTint">#dedede</color>
    <color name="backgroundDark">#121212</color>
    <color name="backgroundDarkTint">#232323</color>

    <!--    dont override below -->
    <color name="colorError">#991122</color>
    <color name="colorOnError">@color/backgroundLight</color>

    <color name="tabButtonSymbol">#e0ffffff</color>

    <!--    colors that change in night mode-->
    <color name="colorBackground">@color/backgroundLight</color>
    <color name="colorOnBackground">@color/backgroundDark</color>

    <color name="colorSurface">@color/backgroundLight</color>
    <color name="colorOnSurface">@color/backgroundDark</color>

    <color name="backgroundAccent">@color/backgroundLightTint</color>

    <!--    colors for button selection/highlight-->
    <color name="button_selected_highlight">#40ffffff</color>
    <color name="button_unselected_highlight">#10ffffff</color>
